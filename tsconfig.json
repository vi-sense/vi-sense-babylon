{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true,
        "outDir": "./dist/"
    },
    "types": [
        "babylonjs",
        "babylonjs-loaders",
    ],
    "exclude": [
        "node_modules",
    ],
    "compileOnSave": true,
    "buildOnSave": false,
}